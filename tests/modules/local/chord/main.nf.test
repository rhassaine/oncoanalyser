nextflow_process {
    name "Test Process CHORD"
    script "modules/local/chord/main.nf"
    process "CHORD"
    config "tests/nextflow.config"

    test("CHORD with default parameters") {
        when {
            params {
                test_sample_data = 'https://raw.githubusercontent.com/nf-core/test-datasets/oncoanalyser/sample_data/simulated_reads/wgts/'
                resource_path = '/home/rhassaine/resources_files_oa/38/'
                mode = 'WGS'
            }
            process {
                """
                input[0] = [
                    [id: 'test', sample_id: 'subject_a.tumor'],
                    file('/home/rhassaine/container_test_output/subject_a/purple/subject_a.tumor.purple.somatic.vcf.gz', checkIfExists: true),
                    file('/home/rhassaine/container_test_output/subject_a/esvee/subject_a.tumor.esvee.somatic.vcf.gz', checkIfExists: true)
                ]
                input[1] = file(params.resource_path + "GCA_000001405.15_GRCh38_no_alt_analysis_set.fna", checkIfExists: true)
                input[2] = file(params.resource_path + "GCA_000001405.15_GRCh38_no_alt_analysis_set.fna.fai", checkIfExists: true)
                input[3] = file(params.resource_path + "GCA_000001405.15_GRCh38_no_alt_analysis_set.fna.dict", checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.chord_dir != null },
                { assert process.out.chord_dir.size() > 0 },
                { assert snapshot(process.out).match() }
            )

            if (process.success) {
                def chord_output_dir = process.out.chord_dir[0][1]
                def sample_id = process.out.chord_dir[0][0].sample_id
                assertAll(
                    { assert path(chord_output_dir).resolve("${sample_id}.chord.mutation_contexts.tsv").exists() },
                    { assert path(chord_output_dir).resolve("${sample_id}.chord.prediction.tsv").exists() },
                    { assert process.out.versions != null },
                    { assert process.out.versions.size() > 0 },
                    { assert path(process.out.versions[0]).exists() }
                )
            }
        }
    }

    test("CHORD should fail when input is missing") {
        when {
            params {
                test_sample_data = 'https://raw.githubusercontent.com/nf-core/test-datasets/oncoanalyser/sample_data/simulated_reads/wgts/'
                resource_path = '/home/rhassaine/resources_files_oa/38/'
                mode = 'WGS'
            }
            process {
                """
                input[0] = [
                    [id: 'test', sample_id: 'subject_a.tumor'],
                    [],  // Missing SMLV VCF file
                    []   // Missing SV VCF file
                ]
                """
            }
        }

        then {
            assertAll(
                { assert !process.success },
                { assert process.exitStatus != 0 }
            )
        }
    }
}