/*
========================================================================================
    Nextflow config file for running tests
========================================================================================
*/

includeConfig '../conf/hmf_containers.config'

docker {
    runOptions = '-v /home/rhassaine/resources_files_oa:/home/rhassaine/resource_files_oa'
    enabled = true
}

params {
    threads = 60
    containers = [
        COBALT: 'docker.io/hartwigmedicalfoundation/cobalt:2.0-rc.1',
        AMBER: 'docker.io/hartwigmedicalfoundation/amber:4.1-rc.2',
        BAMTOOLS: 'docker.io/hartwigmedicalfoundation/bam-tools:1.3-rc.1',
        CUPPA: 'docker.io/hartwigmedicalfoundation/cuppa:2.3.1-rc.3',
        CHORD: 'docker.io/hartwigmedicalfoundation/chord:2.1-rc.1',
        ESVEE: 'docker.io/hartwigmedicalfoundation/esvee:1.1-beta.4',
        LINX: 'docker.io/hartwigmedicalfoundation/linx:2.0-rc.1',
        PURPLE: 'docker.io/hartwigmedicalfoundation/purple:4.1-rc.4',
        REDUX: 'docker.io/hartwigmedicalfoundation/redux:1.1-rc.3',
        SAGE: 'docker.io/hartwigmedicalfoundation/sage:4.0-rc.4',
        PAVE: 'docker.io/hartwigmedicalfoundation/pave:1.7-rc.1',
        VIRUSINTERPRETER: 'docker.io/hartwigmedicalfoundation/virus-interpreter:1.7-rc.2',
        ORANGE: 'docker.io/hartwigmedicalfoundation/orange:3.7.1-rc.1'
    ]
}

process {
    container = { params.containers[task.process] ?: params.containers.default }
}

